FROM python:3.10-slim

# Install system dependencies for Coqui TTS
RUN apt-get update && \
    apt-get install -y ffmpeg git build-essential espeak espeak-data libespeak-dev && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copy requirements and install Python dependencies
COPY coqui-tts/requirements.txt .
RUN pip install -r requirements.txt --no-cache-dir

# Copy the TTS server code
COPY coqui-tts/tts_server.py .

EXPOSE 5000

CMD ["python", "tts_server.py"]
